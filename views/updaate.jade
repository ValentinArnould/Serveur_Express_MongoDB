extends layout

block content
  div
    form(name="update_film", method="post", action="/update_action")
      input(type="hidden" name="film" value="#{film._id}")
      span.label Title
      input(type="text" name="title"  value="#{film.title}")
      span.label Description
      input(type="text" name="content"  value="#{film.content}")

      input(type="submit" value="update")
extends layout